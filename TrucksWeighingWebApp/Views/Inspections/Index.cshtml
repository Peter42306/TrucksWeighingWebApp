@model IEnumerable<TrucksWeighingWebApp.Models.Inspection>

@{
    ViewData["Title"] = "Index";    
}

<h1>Inspections</h1>
<hr />

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="table-responsive">
<table class="table">
    <thead>
        <tr>
            @if (User.IsInRole(RoleNames.Admin))
            {
                <th>
                    @Html.DisplayNameFor(model => model.ApplicationUser)
                </th>
            }
            
            <th>
                @Html.DisplayNameFor(model => model.Vessel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cargo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Place)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeclaredTotalWeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeZoneId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @if (User.IsInRole(RoleNames.Admin))
            {
                <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.Id)
                </td>
            }
            
            <td class="text-nowrap">
                @Html.DisplayFor(modelItem => item.Vessel)
            </td>
            <td class="text-nowrap">
                @Html.DisplayFor(modelItem => item.Cargo)
            </td>
            <td class="text-nowrap">
                @Html.DisplayFor(modelItem => item.Place)
            </td>
            <td class="text-nowrap">
                @item.DeclaredTotalWeight?.ToString("F3")
                @* @Html.DisplayFor(modelItem => item.DeclaredTotalWeight) *@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
            @{
                var tz = TimeZoneInfo.FindSystemTimeZoneById(item.TimeZoneId);
                var offset = tz.BaseUtcOffset;
                var sign = offset.Hours >= 0 ? "+" : "-";
                var formatted = $"UTC{sign}{offset:hh\\:mm}";
            }
                @formatted
            </td>
            <td>
                <span class="d-inline-block text-truncate" style="width: 15rem;">
                    @item.Notes
                </span>
                
            </td>
            <td class="text-nowrap">
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                @* <a asp-action="Details" asp-route-id="@item.Id">Details</a> | *@
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                        <a asp-controller="TruckRecords" asp-action="Index" asp-route-inspectionId="@item.Id" class="text-nowrap">Trucks List</a> |
                        <a asp-controller="TruckRecords" asp-action="Status" asp-route-inspectionId="@item.Id" class="text-nowrap">Trucks Status</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
