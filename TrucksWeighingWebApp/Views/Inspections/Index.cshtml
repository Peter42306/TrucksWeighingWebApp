@model IEnumerable<TrucksWeighingWebApp.Models.Inspection>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Inspector)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vessel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cargo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Place)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeclaredTotalWeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeZoneId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeighedTotalWeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DifferenceWeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DifferencePercent)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Inspector.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vessel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cargo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Place)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeclaredTotalWeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeZoneId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WeighedTotalWeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DifferenceWeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DifferencePercent)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
