@* @model IEnumerable<TrucksWeighingWebApp.Models.Inspection> *@
@model IEnumerable<TrucksWeighingWebApp.ViewModels.InspectionIndexViewModel>
@using TrucksWeighingWebApp.Models

@{
    ViewData["Title"] = "Index";
    var logos = (IEnumerable<UserLogo>)(ViewBag.UserLogos ?? Enumerable.Empty<UserLogo>());
    //const int MaxKb = 512;
}

@if (TempData["Msg"] != null)
{
    <div class="alert alert-success">
        @TempData["Msg"]
    </div>
}

@if (TempData["Err"] != null)
{
    <div class="alert alert-danger">
        @TempData["Err"]
    </div>
}

<h1>Inspections</h1>
<hr />


<div class="mt-3 d-flex align-items-center gap-2">
    <a asp-action="Create">Create New</a>

    <button class="btn btn-link p-0 align-baseline"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#logosCollapse">
        Your Logos
    </button>
</div>

<div class="collapse" id="logosCollapse">
    <div>
        <h5 class="mt-2">Logos</h5>

        <!-- Upload Logo -->
        <form asp-action="UploadLogo" method="post" enctype="multipart/form-data" class="row g-2 align-items-end">
            @Html.AntiForgeryToken()

            <div class="col-sm-3">
                <label class="form-label">Name</label>
                <input name="name" class="form-control" required maxlength="100" />
            </div>

            <div class="col-sm-2">
                <label class="form-label">Position</label>
                <select name="position" class="form-select">
                    <option value="0">Left</option>
                    <option value="1">Center</option>
                    <option value="2">Right</option>
                </select>
            </div>

            <div class="col-sm-1">
                <label class="form-label">Height</label>
                <input name="height" class="form-control" type="number" value="50" min="20" max="100" />
            </div>

            <div class="col-sm-1">
                <label class="form-label">
                    <span class="d-none d-sm-inline">Padding</span>
                    <span class="d-inline d-sm-none">Padding bottom</span>
                </label>
                <input name="paddingBottom" class="form-control" type="number" value="20" min="1" max="100" />
            </div>

            <div class="col-sm-3">
                <label class="form-label">File</label>
                <input name="file" class="form-control" type="file" accept=".png,.jpg,.jpeg" required />
            </div>

            <div class="col-sm-2">
                <button class="btn btn-primary w-100">Add</button>
            </div>
        </form>

        @if (logos.Any())
        {
            <div class="row mt-3 g-3">
                @foreach (var item in logos)
                {
                    <div class="col-12 col-sm-3 d-flex justify-content-center">
                        <div class="border rounded p-2 text-center" style="width:auto">
                            <div class="small">@item.Name</div>
                            <div class="small">@item.Position, @item.Height, @item.PaddingBottom</div>
                            <img class="img-fluid mt-1" src="/@item.FilePath.TrimStart('/')" alt="logo" />
                            <div class="mt-2">
                                <form asp-action="DeleteLogo" method="post" class="d-inline" onsubmit="return confirm('Delete this logo?');">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>



<div class="table-responsive">
<table class="table">
    <thead>
        <tr class="text-nowrap">
            @if (User.IsInRole(RoleNames.Admin))
            {
                <th>
                    @Html.DisplayNameFor(model => model.ApplicationUser)
                </th>
            }
            
            <th>
                @Html.DisplayNameFor(model => model.Vessel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cargo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Place)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeclaredTotalWeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAtLocal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeZoneId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) 
{
        <tr class="text-nowrap">
            @if (User.IsInRole(RoleNames.Admin))
            {
                <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser)
                </td>
            }
            
            <td class="text-nowrap">
                @Html.DisplayFor(modelItem => item.Vessel)
            </td>
            <td class="text-nowrap">
                @Html.DisplayFor(modelItem => item.Cargo)
            </td>
            <td class="text-nowrap">
                @Html.DisplayFor(modelItem => item.Place)
            </td>
            <td class="text-nowrap">
                @item.DeclaredTotalWeight?.ToString("F3")
                @* @Html.DisplayFor(modelItem => item.DeclaredTotalWeight) *@
            </td>
            <td>
                @item.CreatedAtLocal.ToString("yyyy-MM-dd HH:mm")
            </td>
            <td>
            @{
                var tz = TimeZoneInfo.FindSystemTimeZoneById(item.TimeZoneId);
                var offset = tz.BaseUtcOffset;
                var sign = offset.Hours >= 0 ? "+" : "-";
                var formatted = $"UTC{sign}{offset:hh\\:mm}";
            }
                @formatted
            </td>
            <td>
                <span class="d-inline-block text-truncate" style="max-width: 15rem;">
                    @item.Notes
                </span>
                
            </td>
            <td class="text-nowrap">
                <a asp-controller="TruckRecords" asp-action="Index" asp-route-inspectionId="@item.Id" class="text-nowrap">Trucks List</a> |
                <a asp-controller="TruckRecords" asp-action="Status" asp-route-inspectionId="@item.Id" class="text-nowrap">Trucks Status</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Details</a> |                
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
