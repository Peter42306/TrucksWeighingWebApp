<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <script>
        (function(){
            try{
                let theme = localStorage.getItem("bs-theme");
                if(!theme)
                {
                    theme = window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light";
                }
                document.documentElement.setAttribute("data-bs-theme", theme);
            }
            catch{

            }
        })();
    </script>
    <title>@(ViewData["Title"] ?? "Trucks Weighing App")</title>

    @{
        // basic URL
        var baseUrl = $"{Context.Request.Scheme}://{Context.Request.Host}";
        var path = Context.Request.Path.HasValue ? Context.Request.Path.Value : "/";
        var canonical = (ViewData["Canonical"] as string) ?? (baseUrl + path);

        // site name
        var siteName = "Trucks Weighing App";
        var pageTitle = (ViewData["Title"] as string) ?? siteName;
        var metaDesc = (ViewData["MetaDescription"] as string) ?? "Free web app for truck weighing and cargo control. Excel-like workflow, secure server storage, multi-user access, and PDF reports.";
        var robots = (ViewData["Robots"] as string) ?? "index, follow";

        // og image
        var ogImage = (ViewData["OgImage"] as string) ?? $"{baseUrl}/images/og/20250219_170035.jpg";
        var ogW = (ViewData["OgImageWidth"]  as string) ?? "1200";
        var ogH = (ViewData["OgImageHeight"] as string) ?? "630";
    }

    <meta name="description" content="@metaDesc" />
    @{
        var pathLower = path.ToLowerInvariant();
        if (robots == "index, follow" &&
        (pathLower.StartsWith("/applicationuser") ||
        pathLower.StartsWith("/stats") ||
        pathLower.StartsWith("/feedbackadmin") ||
        pathLower.StartsWith("/identity")))
        {
            robots = "noindex, nofollow";
        }
    }

    <meta name="robots" content="@robots" />
    <link rel="canonical" href="@canonical" />

    
    <script type="application/ld+json">
        {
            "@@context": "https://schema.org",
            "@@type": "WebSite",
            "name": "@siteName",
            "url": "@baseUrl/",
            "inLanguage": "en"
        }
    </script>

    <!-- Open Graph -->
    <meta property="og:title" content="@pageTitle" />
    <meta property="og:site_name" content="@siteName" />
    <meta property="og:description" content="@metaDesc" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="@canonical" />
    <meta property="og:image" content="@ogImage" />
    <meta property="og:image:width" content="@ogW" />
    <meta property="og:image:height" content="@ogH" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="@pageTitle" />
    <meta name="twitter:description" content="@metaDesc" />
    <meta name="twitter:image" content="@ogImage" />
        
    <!-- FONTS PRECONNECT -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">    

    <!-- CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />    

    <!-- Favicon -->   
    <link rel="icon" type="image/svg+xml" sizes="any" href="~/favicon.svg" asp-append-version="true">           
    
        @await RenderSectionAsync("Head", required: false)
    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary border-bottom mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Trucks Weighing App</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Inspections" asp-action="Index">Inspections</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Gallery" asp-action="Index">Gallery</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="About" asp-action="Index">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Contact" asp-action="Index">Contact</a>
                        </li>
                        

                        @if (User.IsInRole(RoleNames.Admin))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Stats" asp-action="Index">Stats</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="ApplicationUser" asp-action="Index">Admin Panel</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="FeedbackAdmin" asp-action="Index">Feedback</a>
                            </li>
                        }

                    </ul>

                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" id="theme-toggle" href="javascript:void(0);" title="Toggle theme">🌙</a>
                        </li>

                        <partial name="_LoginPartial" />
                    </ul>
                    
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    
    <!-- JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    

    <script>
        document.addEventListener("DOMContentLoaded", function(){
            const htmlEl = document.documentElement;
            const toggle = document.getElementById("theme-toggle");

            const updateIcon = () => {
                const isDark = htmlEl.getAttribute("data-bs-theme") === "dark";
                toggle.textContent = isDark ? "☀️" : "🌙";
            }

            updateIcon();

            toggle.addEventListener("click", () => {
                const newTheme = htmlEl.getAttribute("data-bs-theme") === "light" ? "dark" : "light";
                htmlEl.setAttribute("data-bs-theme", newTheme);
                try{
                    localStorage.setItem("bs-theme", newTheme);
                }
                catch{

                }
                updateIcon();
            });
        });
    </script>

    
    
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
