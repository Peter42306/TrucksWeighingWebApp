@model TrucksWeighingWebApp.Models.FeedbackTicket

@{
    ViewData["Ticket"] = $"Ticket #{Model.Id}";
}

<div class="container">
    <h1 class="h4 mb-3">Ticket #@Model.Id</h1>

    <p>@Model.CreatedUtc.ToString("yyyy-MM-dd HH:mm")</p>
    <p>@Model.UserEmail</p>
    <p>@Model.Message</p>

    <hr />
    <h2 class="h4 mb-3">Admin Notes</h2>

    <form asp-action="SaveNote" method="post">
        <input type="hidden" name="id" value="@Model.Id"/>
        <textarea name="adminNote" class="form-control" rows="5">@Model.AdminNotes</textarea>
        
        <div class="d-flex mt-2">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-controller="FeedbackAdmin" asp-action="Index" class="btn btn-primary ms-2">Back</a>
        </div>
        

    </form>

    
</div>