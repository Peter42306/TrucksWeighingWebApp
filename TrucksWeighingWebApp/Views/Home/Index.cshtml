@{
    ViewData["Title"] = "Trucks Weighing App – Cargo Survey Tool for Truck Operations";
    ViewData["MetaDescription"] = "Free web app for cargo surveyors and tally teams to manage truck weighing operations. Excel-like workflow, secure server storage, and PDF reporting.";
    ViewData["OgImage"] = $"{Context.Request.Scheme}://{Context.Request.Host}" + Url.Content("~/images/og/20250219_170035.jpg");
}

<div>



    <div class="row">

        <div class="col-lg-6">
            <div id="heroCarousel" class="carousel slide mb-4" data-bs-ride="carousel" data-bs-interval="5000">
                <div class="carousel-inner rounded-3 shadow-sm overflow-hidden">
                    <div class="carousel-item active">
                        <img src="~/images/home/20250219_170035.jpg" class="d-block w-100" alt="Truck at weighbridge" loading="eager" fetchpriority="high" asp-append-version="true">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/home/Screenshot_2025-10-14_214257.jpg" class="d-block w-100" alt="Trucks at berth under loading" loading="lazy" decoding="async" asp-append-version="true">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/home/Screenshot_2025-10-14_215123.jpg" class="d-block w-100" alt="Trucks at berth under loading" loading="lazy" decoding="async" asp-append-version="true">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/home/Screenshot_2025-10-14_215755.jpg" class="d-block w-100" alt="Truck at berth under loading" loading="lazy" decoding="async" asp-append-version="true">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/home/Screenshot_2025-10-14_222028.jpg" class="d-block w-100" alt="Truck at berth under loading" loading="lazy" decoding="async" asp-append-version="true">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/home/Screenshot_2025-10-14_222447.jpg" class="d-block w-100" alt="Trucks at berth under loading" loading="lazy" decoding="async" asp-append-version="true">
                    </div>                   
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev" aria-label="Previous">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next" aria-label="Next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                </button>
            </div>
        </div>

        <div class="col-lg-6">

            <h1 class="h4 text-center mt-2 mb-2">Trucks Weighing Web Application</h1>
            <hr />

            <p>An online application for weight control inspections with initial and final truck weighing, built for cargo surveyors and tally teams.</p>

            <p>Excel-like workflow with server-based storage and multi-user access for the tally team.</p>

            <p>Key features:</p>

            <ul>
                <li>Free to use</li>
                <li>Responsive layout for desktop and mobile</li>
                <li>Two control points: at weighbridge (initial and final weighing) and at cargo operations point (visual status control of each truck)</li>
                <li>Tracking of truck status between initial and final weighing</li>
                <li>Auto-fill of truck plate numbers</li>
                <li>Data stored securely on the server</li>
                <li>PDF report export by a selected period</li>
            </ul>

        </div>

    </div>

    <hr />
    <div class="text-center">
        @if (User?.Identity?.IsAuthenticated ?? false)
        {
            <div class="d-inline-flex gap-2">
                <a class="btn btn-outline-primary" asp-controller="Inspections" asp-action="Create">Start a new survey</a>
                <a class="btn btn-outline-secondary" asp-controller="Inspections" asp-action="Index">My inspections</a>
            </div>
            <div class="mt-2">
                <a class="link-secondary" href="https://youtu.be/4bdfnxBKocM" target="_blank" rel="noopener noreferrer"><i class="bi bi-youtube me-2 text-danger"></i>YouTube demo</a>
                <span class="text-muted">·</span>
                <a class="link-secondary" asp-controller="Gallery" asp-action="Index">Gallery</a>
                <span class="text-muted">·</span>
                <a class="link-secondary" asp-controller="About" asp-action="Index">About</a>
                <span class="text-muted">·</span>
                <a class="link-secondary" asp-controller="Contact" asp-action="Index">Contact</a>
            </div>
        }
        else
        {
            <div class="d-inline-flex gap-2">
                <a class="btn btn-outline-primary" asp-area="Identity" asp-page="/Account/Login">Sign in</a>
                <a class="btn btn-outline-secondary" asp-area="Identity" asp-page="/Account/Register">Create account</a>
            </div>

            <div class="mt-2">
                <a class="link-secondary" href="https://youtu.be/4bdfnxBKocM" target="_blank" rel="noopener noreferrer"><i class="bi bi-youtube me-2 text-danger"></i>YouTube demo</a>
                <span class="text-muted">·</span>
                <a class="link-secondary" asp-controller="Gallery" asp-action="Index">Gallery</a>
                <span class="text-muted">·</span>
                <a class="link-secondary" asp-controller="About" asp-action="Index">About</a>
                <span class="text-muted">·</span>
                <a class="link-secondary" asp-controller="Contact" asp-action="Index">Contact</a>
            </div>
            
        }
    </div>

</div>
